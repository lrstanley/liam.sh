{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "compilerOptions": {
        "outDir": "dist/",
        "allowJs": true,
        "baseUrl": ".",
        "module": "ES2020",
        "noImplicitThis": true,
        "paths": {
            "@/*": [
                "src/*",
                "./*"
            ]
        },
        "removeComments": true,
        "strict": false,
        "types": [
            "naive-ui/volar",
            "vite-plugin-pages/client"
        ],
    },
    "exclude": [
        "node_modules",
        "dist",
        ".git",
        "./src/lib/http/api/**",
        "./src/*.config.js",
    ],
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": true
    }
}
